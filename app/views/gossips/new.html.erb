<h1>Créer un potin</h1>

<%=form_for @gossips do |f| %>

	<div class="form_group">
		<label>Titre du potin</label>
		<%= f.text_field :titre, class: 'form-control' %>
	</div>

	<div class="form_group">
		<label>Contenu du potin</label>
		<%= f.text_field :content, class: 'form-control' %>
	</div>

	<dir class="form_group">
		<button type="submit" class="btn btn-primary">Créer le potin</button>
	</dir>


<%end%>